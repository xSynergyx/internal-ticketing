<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#009688</item>
        <item name="colorPrimaryDark">#00796B</item>
        <item name="colorAccent">#8BC34A</item> <!-- #80DEEA -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="android:actionOverflowButtonStyle">@style/overflowMenu</item>
    </style>

    <style name="overflowMenu" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/overflow_menu</item>
        <item name="android:background">?android:attr/actionBarItemBackground</item>
        <item name="android:contentDescription">"Menu"</item>
    </style>

    <style name="bottomButtons">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="partition">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@android:color/darker_gray</item>
    </style>

    <style name="NewFragmentEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_primaryColor">?attr/colorAccent</item>
        <item name="android:layout_margin">16dp</item>
    </style>

</resources>